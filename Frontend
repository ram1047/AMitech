          { module: 'Module 1: Network Fundamentals', topics: ['OSI Model', 'TCP/IP Protocol Suite', 'Ethernet Standards', 'Network Topologies'] },
          { module: 'Module 2: Network Access', topics: ['VLANs and Trunking', 'EtherChannel', 'Spanning Tree Protocol', 'Wireless Fundamentals'] },
          { module: 'Module 3: IP Connectivity', topics: ['IPv4 and IPv6 Addressing', 'Subnetting and VLSM', 'Static and Dynamic Routing', 'OSPF and EIGRP'] },
          { module: 'Module 4: IP Services', topics: ['DHCP Configuration', 'DNS Services', 'NAT and PAT', 'NTP Configuration'] },
          { module: 'Module 5: Security Fundamentals', topics: ['Access Control Lists (ACLs)', 'Security Best Practices', 'Device Hardening', 'VPN Basics'] },
          { module: 'Module 6: Automation and Programmability', topics: ['Network Automation', 'REST APIs', 'JSON and XML', 'Python for Network Engineers'] }
        ]
      }
    };

    function showSyllabus(courseId) {
      const course = syllabusData[courseId];
      if (!course) return;

      document.getElementById('syllabusTitle').textContent = course.title;
      const contentDiv = document.getElementById('syllabusContent');
      contentDiv.innerHTML = '';

      course.content.forEach(module => {
        const moduleDiv = document.createElement('div');
        moduleDiv.className = 'bg-gray-50 p-4 rounded-lg';

        const moduleTitle = document.createElement('h4');
        moduleTitle.className = 'text-lg font-semibold text-gray-800 mb-3';
        moduleTitle.textContent = module.module;

        const topicsList = document.createElement('ul');
        topicsList.className = 'space-y-1';

        module.topics.forEach(topic => {
          const listItem = document.createElement('li');
          listItem.className = 'text-gray-600 flex items-center';
          listItem.innerHTML = `<i class="fas fa-check-circle text-green-500 mr-2"></i>${topic}`;
          topicsList.appendChild(listItem);
        });

        moduleDiv.appendChild(moduleTitle);
        moduleDiv.appendChild(topicsList);
        contentDiv.appendChild(moduleDiv);
      });

      document.getElementById('syllabusModal').classList.remove('hidden');
    }

    function closeSyllabus() {
      document.getElementById('syllabusModal').classList.add('hidden');
    }

    let lastScrollTop = 0;
    const header = document.getElementById('header');

    window.addEventListener('scroll', function () {
      let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      if (scrollTop > lastScrollTop && scrollTop > 100) {
        header.style.transform = 'translateY(-100%)';
      } else {
        header.style.transform = 'translateY(0)';
      }
      lastScrollTop = scrollTop;
    });

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });
  </script>
</body>
</html>
```

